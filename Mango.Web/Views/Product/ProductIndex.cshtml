@model IEnumerable<ProductDto>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Product List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i>Create New Product</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Description</th>
                    <th>Category Name</th>
                    <th>Image Url</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductId</td>
                        <td>@item.Name</td>
                        <td>@((item.Price).ToString("c"))</td>
                        <td>@item.Description</td>
                        <td>@item.CategoryName</td>
                        <td><img src="@Url.Content(item.ImageUrl)" alt="Image" width="50px" height="50px" /></td>
                        <td>
                            <a asp-action="ProductDelete" asp-route-productId="@item.ProductId" class="btn btn-primary">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                        <td>
                            <a asp-action="ProductEdit" asp-route-productId="@item.ProductId" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>